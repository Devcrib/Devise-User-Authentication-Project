<!DOCTYPE html>
<html>
<head>
  <title>Ecv</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag "bootstrap.min.css" %>
 <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=2.0, user-scalable=no">
  
</head>
<body>
<div class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <a href="../" class="navbar-brand">Frame</a>
          <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>
        <div class="navbar-collapse collapse" id="navbar-main">
          <ul class="nav navbar-nav">
          

            <li>
              <a href="../help/">Help</a>
            </li>

           
          </ul>

          <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            
             <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" href="#" id="themes">Welcome <%= current_user.username %> ! <span class="caret"></span></a>
              <ul class="dropdown-menu" aria-labelledby="themes">
                <li><a href="../default/">Dashboard</a></li>
                <li class="divider"></li>
                 <li><%= link_to "Log Out", destroy_user_session_path, :method => :delete %></li>
              </ul>
            </li>


         
          <% else %>
            <li><a class="btn" data-toggle="modal" href="javascript:void(0)" onclick="openLoginModal();">Log in</a></li>

			<li><a class="btn" data-toggle="modal" href="javascript:void(0)" onclick="openRegisterModal();">Register</a></li>
			<% end %>
           </ul>

        </div>
      </div>
    </div>

<%= yield %>
<%=javascript_include_tag "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" %>
</body>
</html>
